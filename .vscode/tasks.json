{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc.exe build active file",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"${file}",
				"-o",
				"${fileDirname}\\Ejecutables\\${fileBasenameNoExtension}.exe",
				"-lfreeGLUT",
				"-lOpenGL32",
				"-lglew32"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}